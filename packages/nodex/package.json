{
  "name": "@dcdavidev/nodex",
  "version": "0.0.1",
  "private": false,
  "description": "An extensible and robust Express.js backend framework, designed for effortless customization and rapid deployment.",
  "keywords": [
    "typescript",
    "expressjs",
    "express-js",
    "server",
    "backend",
    "api"
  ],
  "homepage": "https://github.com/dcdavidev/nodex#readme",
  "bugs": {
    "url": "https://github.com/dcdavidev/nodex/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dcdavidev/nodex.git",
    "directory": "packages/nodex"
  },
  "license": "MIT",
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "LICENSE"
  ],
  "dependencies": {
    "express-rate-limit": "^8.2.0",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/node": "^24.9.2",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "tsdown": "^0.15.12",
    "typescript": "^5.9.3",
    "zod": "^4.1.12"
  },
  "publishConfig": {
    "access": "public"
  },
  "nx": {
    "name": "nodex",
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "inputs": [
          "production"
        ],
        "outputs": [
          "{projectRoot}/dist"
        ],
        "options": {
          "cwd": "{projectRoot}",
          "parallel": false,
          "commands": [
            "npx tsc --project tsconfig.lib.json",
            "tsdown"
          ]
        }
      },
      "watch": {
        "executor": "nx:run-commands",
        "inputs": [
          "default"
        ],
        "options": {
          "cwd": "{projectRoot}",
          "commands": [
            "tsdown --watch"
          ]
        }
      }
    }
  }
}
