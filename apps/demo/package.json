{
  "name": "@dcdavidev/demo",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "dependencies": {
    "@dcdavidev/nodex": "^0.2.1",
    "express": "^5.1.0",
    "serve-favicon": "^2.5.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/node": "^24.9.2",
    "@types/serve-favicon": "^2.5.7",
    "typescript": "^5.9.3"
  },
  "nx": {
    "name": "demo",
    "targets": {
      "build": {
        "executor": "@nx/esbuild:esbuild",
        "outputs": [
          "{options.outputPath}"
        ],
        "defaultConfiguration": "production",
        "options": {
          "platform": "node",
          "outputPath": "apps/demo/dist",
          "format": [
            "esm"
          ],
          "bundle": false,
          "main": "apps/demo/src/main.ts",
          "tsConfig": "apps/demo/tsconfig.app.json",
          "assets": [
            "apps/demo/src/favicons"
          ],
          "esbuildOptions": {
            "sourcemap": true,
            "outExtension": {
              ".js": ".js"
            }
          }
        },
        "configurations": {
          "development": {},
          "production": {
            "esbuildOptions": {
              "sourcemap": false,
              "outExtension": {
                ".js": ".js"
              }
            }
          }
        }
      },
      "prune-lockfile": {
        "dependsOn": [
          "build"
        ],
        "cache": true,
        "executor": "@nx/js:prune-lockfile",
        "outputs": [
          "{workspaceRoot}/apps/demo/dist/package.json",
          "{workspaceRoot}/apps/demo/dist/package-lock.json"
        ],
        "options": {
          "buildTarget": "build"
        }
      },
      "copy-workspace-modules": {
        "dependsOn": [
          "build"
        ],
        "cache": true,
        "outputs": [
          "{workspaceRoot}/apps/demo/dist/workspace_modules"
        ],
        "executor": "@nx/js:copy-workspace-modules",
        "options": {
          "buildTarget": "build"
        }
      },
      "prune": {
        "dependsOn": [
          "prune-lockfile",
          "copy-workspace-modules"
        ],
        "executor": "nx:noop"
      },
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "demo:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "demo:build:development"
          },
          "production": {
            "buildTarget": "demo:build:production"
          }
        }
      }
    }
  }
}
