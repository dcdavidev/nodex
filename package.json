{
  "name": "@dcdavidev/source",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*",
    "tools/*",
    "packages/*"
  ],
  "scripts": {
    "build": "nx run-many -t build",
    "commit": "cz",
    "deps:up": "./scripts/depts-upgrade.sh",
    "fmt:check": "prettier . --check",
    "fmt:fix": "prettier . --write",
    "lint:check": "eslint .",
    "lint:fix": "eslint --fix .",
    "lint:fmt": "npm run lint:fix && npm run fmt:fix",
    "nx:agents": "nx configure-ai-agents",
    "nx:agents:check": "nx configure-ai-agents --check",
    "nx:agents:upgrade": "nx configure-ai-agents --agents codex gemini",
    "nx:daemon:start": "nx daemon --start",
    "nx:migrate": "nx migrate --run-migrations=migrations.json --if-exists && npm install",
    "nx:release": "nx release --yes --verbose",
    "nx:release:first-release": "nx release --first-release --yes --verbose",
    "nx:repair": "nx repair",
    "nx:reset": "nx reset",
    "nx:sync": "nx sync",
    "nx:upgrade": "nx migrate latest",
    "prepare": "lefthook install",
    "release": "nx release --yes --verbose",
    "spellbookx:upgrade": "npm i -D @spellbookx/{commitlint,cspell,prettier}-config@latest @spellbookx/eslint-plugin@latest"
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@cspell/cspell-types": "^9.2.2",
    "@dcdavidev/nodex": "^0.2.1",
    "@nx/esbuild": "22.0.1",
    "@nx/js": "22.0.1",
    "@nx/node": "22.0.1",
    "@nx/react": "22.0.1",
    "@nx/web": "22.0.1",
    "@nx/webpack": "22.0.1",
    "@nx/workspace": "22.0.1",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.6.1",
    "@spellbookx/commitlint-config": "^0.21.6",
    "@spellbookx/cspell-config": "^0.21.6",
    "@spellbookx/eslint-plugin": "^0.24.0",
    "@spellbookx/prettier-config": "^0.21.6",
    "@svgr/webpack": "^8.0.1",
    "@swc-node/register": "^1.11.1",
    "@swc/core": "^1.14.0",
    "@swc/helpers": "^0.5.17",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/express-session": "^1.18.2",
    "@types/hpp": "^0.2.7",
    "@types/node": "^24.9.2",
    "@types/passport": "^1.0.17",
    "@types/serve-favicon": "^2.5.7",
    "commitizen": "^4.3.1",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "cspell": "^9.2.2",
    "cz-git": "^1.12.0",
    "esbuild": "^0.27.0",
    "eslint": "^9.38.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.0",
    "express-session": "^1.18.2",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "lefthook": "^2.0.2",
    "nx": "22.0.1",
    "passport": "^0.7.0",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "prettier": "^3.6.2",
    "react-refresh": "^0.18.0",
    "serve-favicon": "^2.5.1",
    "tsdown": "^0.15.12",
    "tslib": "^2.3.0",
    "typescript": "^5.9.3",
    "webpack-cli": "^6.0.1",
    "zod": "^4.1.12"
  }
}
